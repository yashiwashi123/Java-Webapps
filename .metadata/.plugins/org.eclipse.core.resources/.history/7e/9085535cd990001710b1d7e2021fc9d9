<c:import url="Welcome.jsp"> 

<c:param name="title" value="WaifuRanker - View Image"></c:param>
</c:import>
<sql:setDataSource var ="ds" dataSource="jdbc/webshop" />
<!-- selects the "webshop" schema from mysql and sets it to the "ds" variable  -->

<sql:query dataSource="${ds}" sql="select * from images where id=?" var = "results" >
<sql:param>${param.image } </sql:param>
 </sql:query>
<!-- query's through the "images" table and selects all --> 


	<c:set scope ="page" var="image" value="${results.rows[0] }"> </c:set>
	<c:set scope ="page" var="imgname" value="${image.stem}.${image.image_extension}"> </c:set>		
	
	<H2>${fn:substring(image.stem, 1, -1)}</H2>
	
		<figure>
		<img src="${pageContext.request.contextPath}/waifu/${imgname}" 
		/>		
		<br />
		<figcaption> Waifu # ${image.id}</figcaption>		
		</figure>
		
		<td>
				<form action='<c:url value="/gallery" />' method="post">
					<input type="hidden" name="action" value="rate" /> <input
						type="hidden" name="image" value="${image.id}" />

					<table style="padding: 20px; border: none;">
						<tr>
							<td><h3>
									<i>Rate It!</i>
								</h3></td>
						</tr>
						<tr>
